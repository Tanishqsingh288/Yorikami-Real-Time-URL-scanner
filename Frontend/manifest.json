{
  "manifest_version": 3,
  "name": "Yorikami",
  "version": "1.0",
  "description": "Yorikami is a free Chrome extension that protects users while browsing by scanning web pages in real time for harmful or suspicious links. It highlights threats clearly, helps users avoid scams, and offers a private dashboard to track risks â€” all without tracking your data or slowing you down.",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://yorikamiscanner.duckdns.org/*"
  ],
  "action": {
    "default_popup": "Real-timeUI/ui.html",
    "default_icon": {
      "16": "./graphical-assests/displaylogo.png",
      "48": "./graphical-assests/displaylogo.png",
      "128": "./graphical-assests/displaylogo.png"
    }
  },
  "background": {
    "service_worker": "Real-timeUI/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Real-timeUI/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webpages/*.html",
        "styling/*.css",
        "scripts/*.js",
        "graphical assets/soft_notification.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
